    <script>
        function mostrarMensagem(event) {
            event.preventDefault();
            
            const nome = document.getElementById("nome").value;
            const cpf = document.getElementById("cpf").value;
            const senha = document.getElementById("senha").value;
            const senhaRepetida = document.getElementById("senhaRepetida").value;

            if (senha !== senhaRepetida) {
                alert("As senhas não coincidem!");
                return;
            }

            alert(`Cadastro realizado com sucesso!\nNome: ${nome}\nCPF: ${cpf}`);
            // Redirecionar para a tela de login
            window.location.href = 'tela_de_login.html'; // Ajuste o nome do arquivo conforme necessário
        }
    </script>
