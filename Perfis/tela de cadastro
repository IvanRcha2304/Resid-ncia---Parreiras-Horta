<body>
    <img src="https://2.bp.blogspot.com/-_-byeEg_Nvs/Tfdi8XorkDI/AAAAAAAAAAQ/GXdt1OsCaYE/s1600/Figura1.jpg" alt="Logo" class="logo">
    <form id="cadastroForm" onsubmit="mostrarMensagem(event)">
        <h1>Cadastro de Usuário</h1>
        <label for="nome">Nome Completo:</label>
        <input type="text" id="nome" name="nome" required maxlength="100">

        <label for="cpf">CPF:</label>
        <input type="text" id="cpf" name="cpf" required maxlength="11" pattern="\d{11}" placeholder="Digite apenas números">

        <label for="senha">Senha:</label>
        <input type="password" id="senha" name="senha" required>

        <label for="senhaRepetida">Repetir Senha:</label>
        <input type="password" id="senhaRepetida" name="senhaRepetida" required>

        <input type="submit" value="Cadastrar">
    </form>
</body>
